CFLAGS = $(CCOPTS) $(DEFS) $(LOCALINCLUDE)

all::

SRCS = \
	$(srcdir)/networked.c \
	$(srcdir)/kpasswd.c

OBJS = \
	networked.o \
	kpasswd.o


all::	kpasswd

kpasswd: $(OBJS) $(DEPLIBS)
	$(LD) $(LDFLAGS) $(LDARGS) -o kpasswd $(OBJS) $(LIBS)

install::
	$(INSTALL_PROGRAM) $(C)kpasswd ${DESTDIR}$(CLIENT_BINDIR)$(S)kpasswd_old
	$(INSTALL_DATA) $(srcdir)$(S)kpasswd.M ${DESTDIR}$(CLIENT_MANDIR)$(S)kpasswd_old.1


clean::
	$(RM) kpasswd


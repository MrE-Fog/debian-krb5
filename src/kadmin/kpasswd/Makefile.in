CFLAGS = $(CCOPTS) $(DEFS) $(LOCALINCLUDE)

all::

SRCS = \
	$(srcdir)/kpasswd.c

OBJS = \
	kpasswd.o


all::	kpasswd

kpasswd: $(OBJS) $(DEPLIBS)
	$(LD) $(LDFLAGS) $(LDARGS) -o kpasswd $(OBJS) $(LIBS)

install::
	for f in kpasswd; do \
	  $(INSTALL_PROGRAM) $$f \
		$(DESTDIR)$(CLIENT_BINDIR)/`echo $$f|sed '$(transform)'`; \
	  $(INSTALL_DATA) $(srcdir)/$$f.M \
		${DESTDIR}$(CLIENT_MANDIR)/`echo $$f|sed '$(transform)'`.1; \
	done

clean::
	$(RM) kpasswd


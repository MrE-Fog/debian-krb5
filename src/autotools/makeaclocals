#!/bin/sh
for i in `find . -type d ! -name CVS -print`; do
	k=`echo $i | sed -e 's/[^/]//g' \
		-e 's/\//..\//g' \
		-e 's/\(.*\)\/$/.\/\1/'`
	if test $i != . ; then
		echo match: $i $k
		cat >$i/aclocal.m4<<EOF
sinclude([$k/aclocal.m4])dnl
undefine([AC_BUILDTOP])dnl
define(AC_BUILDTOP,[$k])dnl
EOF
	fi
done

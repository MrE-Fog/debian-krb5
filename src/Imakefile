#define IHaveSubdirs
#define PassCDebugFlags

/* default target... */
all::

world::
	make ${MFLAGS} mastermakefiles
	make ${MFLAGS} depend
	make ${MFLAGS} all

SUBDIRS = include lib kdc admin slave clients appl tests
LNINSTALLDIRS = 

MakeSubdirs($(SUBDIRS))

depend:: includes

install::
	$(MAKE) $(MFLAGS) install.man

/**/# rebuild the Makefiles in the master source tree
mastermakefiles::
	-$(MV) Makefile Makefile.bak
	$(MAKE) -f Makefile.bak Makefile
	$(MAKE) Makefiles

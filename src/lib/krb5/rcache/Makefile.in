CFLAGS = $(CCOPTS) $(DEFS)

##DOSBUILDTOP = ..\..\..
##DOSLIBNAME=..\krb5.lib
##DOS!include $(BUILDTOP)\config\windows.in

.c.o:
	$(CC) $(CFLAGS) -c $(srcdir)/$*.c
@SHARED_RULE@

OBJS=	\
	rc_base.$(OBJEXT)	\
	rc_dfl.$(OBJEXT) 	\
	rc_io.$(OBJEXT)		\
	rcdef.$(OBJEXT)		\
	rc_conv.$(OBJEXT)

SRCS=	\
	$(srcdir)/rc_base.c	\
	$(srcdir)/rc_dfl.c 	\
	$(srcdir)/rc_io.c	\
	$(srcdir)/rcdef.c	\
	$(srcdir)/rc_conv.c

all:: all-$(WHAT)

all-unix:: shared $(OBJS)
all-mac:: $(OBJS)
all-windows:: $(OBJS)

shared:
	mkdir shared

clean:: clean-$(WHAT)

clean-mac::
clean-windows::

clean-unix::
	$(RM) shared/*

	-$(MAKE) -$(MFLAGS) 
	@echo Making in lib\gssapi
	cd ..\gssapi
	-$(MAKE) -$(MFLAGS) 
	@echo Making in lib
	cd ..

all-windows:: libkrb5.lib gssapi.lib

clean-windows::
	@echo Making clean in lib\crypto
	cd crypto
	-$(MAKE) -$(MFLAGS) clean
	@echo Making clean in lib\kadm
	cd ..\kadm
	-$(MAKE) -$(MFLAGS) clean
	@echo Making clean in lib\krb5

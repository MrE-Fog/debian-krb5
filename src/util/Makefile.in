CFLAGS = $(CCOPTS)

editsh = sed -e 's,@''ARADD''@,$(ARADD),g' -e 's,@''ARCHIVE''@,$(ARCHIVE),g'

all:: all-$(WHAT)

all-unix:: libupdate
all-mac::
all-windows: libupdate

unixmac: libupdate

libupdate: $(srcdir)/libupdate.sh
	$(RM) $@ $@.tmp
	$(editsh) $(srcdir)/libupdate.sh > $@.tmp && chmod +x $@.tmp && mv $@.tmp $@

clean::
	$(RM) libupdate

install::
	@echo nothing to install in util

BUILDTOP=@BUILDTOP@
###############################################################################
#   Instructions to Make, for compilation of ISODE header files
###############################################################################
srcdir = @srcdir@
VPATH = @srcdir@

TOPDIR = $(BUILDTOP)/

OPTIONS	=	-I. -I$(HDIR) $(PEPYPATH) $(KRBOPT)
CC = @CC@
CCOPTS = @CCOPTS@
CFLAGS  =       $(CCOPTS) $(OPTIONS) $(LOPTIONS) 

HDIR	=	$(TOPDIR)isode/h/
UTILDIR	=	$(TOPDIR)isode/util/
INCDIRM	=	$(HDIR)
INCDIR	=	$(INCDIRM)/
PEPSYDIRM=	$(INCDIR)pepsy
PEPSYDIR=	$(PEPSYDIRM)/
LIBISODE=	$(TOPDIR)libisode.a
LIBDSAP	=	$(TOPDIR)libdsap.a

KRBINC	=	$(TOPDIR)include/
ISODEINCM=	$(KRBINC)isode
ISODEINC=	$(ISODEINCM)/

LIBES	=	libcompat.a
LLIBS   =
HFILES	=	$(HDIR)manifest.h $(HDIR)general.h $(HDIR)config.h
LN	=	ln


